{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "allstarpro/multi-client:latest",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "allstarpro/multi-server:latest",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "allstarpro/multi-worker:latest",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "allstarpro/multi-nginx:latest",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}